<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    tools:context=".activity.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bakeriesmoothheavy"
        android:layout_gravity="top|center_horizontal"
        android:text="Your English"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textStyle="bold"
        tools:ignore="RtlCompat"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_word"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="#D2DAFF"
                android:fontFamily="@font/segoescript"
                android:text="Add a new words"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/review"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#FAF5FB"
                android:fontFamily="@font/segoescript"
                android:text="Review"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/new_voca"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="#FAEFF7"
                android:fontFamily="@font/segoescript"
                android:text="The new vocabularies"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="#F7E9FA"
                android:fontFamily="@font/segoescript"
                android:textAllCaps="false" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/fab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/background_button_account"
        app:srcCompat="@drawable/account_circle"
        tools:ignore="VectorDrawableCompat"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"/>
</FrameLayout>
