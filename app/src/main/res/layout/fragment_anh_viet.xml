<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7E9FA"
    tools:context="com.example.ey_application.fragment.AnhVietFragment" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/borderlinearlayout"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        >

        <ImageButton
            android:id="@+id/imageVolume"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#F7E9FA"
            android:layout_marginRight="100dp"
            android:src="@drawable/volume_high"
            android:layout_gravity="right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/calibril"
            android:textSize="20dp"
            android:text="Pronounce"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"/>

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ahihi"
                android:fontFamily="@font/calibril"
                android:textSize="30dp"
                android:layout_marginRight="40dp"
                android:textColor="#172051"
                android:textStyle="bold">

            </TextView>
            <TextView
                android:id="@+id/spell_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ahihi"
                android:fontFamily="@font/calibril"
                android:textSize="20dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/meanVietnamese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="ahihi"
            android:textColor="#172051"
            android:textSize="20dp" />
        <ListView
            android:id="@+id/list_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>